     <content><![CDATA[\$product_attribute_sets = Mage::getResourceModel('eav/entity_attribute_set_collection')->setEntityTypeFilter(Mage::getModel('catalog/product')->getResource()->getTypeId());
    foreach (\$product_attribute_sets as \$a_sets) {
        \$this->_attribute_sets[\$a_sets->getAttributeSetName()] = \$a_sets->getAttributeSetId();
    }]]></content>
